{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": "^([a-z][a-zA-Z0-9]*(-[a-zA-Z0-9]+)*)?$",
    "selector-id-pattern": "^([a-z][a-zA-Z0-9]*(-[a-zA-Z0-9]+)*)?$",
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["classname"]
    }]
  }
}